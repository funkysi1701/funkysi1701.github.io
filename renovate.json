{
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "extends": [
        "packages:stylelint"
      ],
      "groupName": "stylelint packages"
    },
    {
      "extends": [
        "packages:eslint"
      ],
      "groupName": "eslint packages"
    }
  ],
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "fileMatch": ["^\\.env$"],
      "manager": "regex",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "gohugoio/hugo",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "HUGO_VERSION=(?<currentValue>.+)",
      "depNameTemplate": "hugo"
    }
  ]
}
