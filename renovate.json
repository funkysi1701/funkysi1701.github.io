{
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "extends": [
        "packages:stylelint"
      ],
      "groupName": "stylelint packages"
    },
    {
      "extends": [
        "packages:eslint"
      ],
      "groupName": "eslint packages"
    },
    {
      "matchPackageNames": [
        "*katex*"
      ],
      "groupName": "katex packages"
    }
  ],
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.env$/"
      ],
      "matchStrings": [
        "HUGO_VERSION=(?<currentValue>.+)"
      ],
      "currentValueTemplate": "{{currentValue}}",
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "Florin-Lungu/docker-hugo",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^v?(?<version>.+)$",
      "depNameTemplate": "hugo"
    }
  ],
  "enabledManagers": [
    "custom.regex",
    "npm"
  ]
}
